pipeline {
    agent any
    tools {
        nodejs '20.15.0'
    }

    environment {
        S3_BUCKET = 'reactjs-todo-app-bucket'
        S3_KEY = 'todoapp.zip'
        CODEDEPLOY_APPLICATION = 'ReactJS-Todo-App'
        CODEDEPLOY_DEPLOYMENT_GROUP = 'Todo-app-test-deployment-group'
        AWS_REGION = 'us-east-1' // Replace with your region
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ngofficial99/Todo-app-ReactJS'
            }
        }
       
        // The pipeline will only run when it's a pull request (PR)
        stage('Install Dependencies') {
            when {
                expression { env.CHANGE_ID != null }  // Only runs for pull requests
            }
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
       
        stage('Run Tests') {
            when {
                expression { env.CHANGE_ID != null }  // Only runs for pull requests
            }
            steps {
                script {
                    sh 'npm test'
                }
            }
        }

        stage('Build') {
            when {
                expression { env.CHANGE_ID != null }  // Only runs for pull requests
            }
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }

        // Packaging and Uploading the build can be skipped on pull requests but might still run if desired
        stage('Package and Upload') {
            when {
                expression { env.CHANGE_ID != null }  // Only runs for pull requests
            }
            steps {
                script {
                    // Package the build for deployment
                    sh 'zip -r build.zip *'

                    // Upload the package to S3
                    sh """
                        aws s3 cp build.zip s3://$S3_BUCKET/$S3_KEY --region $AWS_REGION
                    """
                }
            }
        }

        // CodeDeploy will only run on merge to the main branch
        stage('Deploy') {
            when {
                branch 'main' // Only deploy when merged into the main branch
                expression { env.CHANGE_ID == null }  // Ensures it doesn't run during pull requests


            }
            steps {
                script {
                    // Trigger AWS CodeDeploy deployment
                    sh """
                        aws deploy create-deployment \
                        --application-name $CODEDEPLOY_APPLICATION \
                        --deployment-group-name $CODEDEPLOY_DEPLOYMENT_GROUP \
                        --s3-location bucket=$S3_BUCKET,key=$S3_KEY,bundleType=zip \
                        --region $AWS_REGION
                    """
                }
            }
        }
    }

    post {
        always {
            // Clean up after build
            cleanWs()
        }
        success {
            echo 'Build and deployment completed successfully!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}